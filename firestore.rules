rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          get(/databases/$(database)/documents/users/$(request.user.uid)).data.isAdmin;
    }

    match /events/{event} {
    	allow read;
    }
    match /events/{event} {
    	allow update: if
      		request.user.uid in
          	get(/databases/$(database)/documents/events/$(event)/participants/organizators);
    }
  }
}